{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2020", "DOM", "dom.iterable"],
		"target": "es2020",
		/**
			svelte-preprocess cannot figure out whether you have a value or a type, so tell TypeScript
			to enforce using \`import type\` instead of \`import\` for Types.
			*/
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"./pure": ["./pure.js"]
		}
	},
	"exclude": [
		"**/_website/**/*",
		"**/dist/**/*",
		"**/public/**/*",
		"**/.config/**/*",
		"**/*.test.ts",
		"**/dist",
		".github/**/*",
		"**/demo/**/*",
		"**/gradio/**/*",
		"**/guides/**/*",
		"**/readme_files/**/*",
		"**/scripts/**/*",
		"**/test/**/*",
		"**/website/**/*",
		"**/node_modules/**/*",
		"**/venv/**/*",
		"client/js/**",
		"**/vite.config*"
	],
	"include": [
		"**/*.d.ts",
		"**/*.js",
		"**/*.ts",
		"**/*.svelte",
		"client/js/**/*",
		".changeset/*.cjs"
	]
}
