                <button class="tab-btn active" onclick="switchTab('dashboard')">Dashboard</button>
                <button class="tab-btn" onclick="switchTab('customers')">Customers</button>
            </div>
        </header>

        <!-- Main Content -->
        <div class="content">
            <!-- Dashboard Tab -->
            <div id="dashboard" class="tab-content active">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-label">Total Customers</div>
                        <div class="stat-value" id="totalCustomers">0</div>
                    </div>
                    <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <div class="stat-label">Active Deals</div>
                        <div class="stat-value" id="activeDeals">0</div>
                    </div>
                    <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <div class="stat-label">New Leads</div>
                        <div class="stat-value" id="newLeads">0</div>
                    </div>
                    <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                        <div class="stat-label">Revenue (YTD)</div>
                        <div class="stat-value">$2.4M</div>
                    </div>
                </div>

                <div class="chart-container">
                    <h3 style="margin-bottom: 20px; color: #333;">Sales Pipeline Overview</h3>
                    <canvas id="pipelineChart" height="80"></canvas>
                </div>
            </div>

            <!-- Customers Tab -->
            <div id="customers" class="tab-content">
                <div class="toolbar">
                    <div class="search-box">
                        <input type="text" id="searchInput" placeholder="Search customers..." onkeyup="searchCustomers()">
                    </div>
                    <button class="btn" onclick="openAddModal()">‚ûï Add Customer</button>
                </div>

                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Company</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="customerTable">
                            <!-- Customer rows will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Customer Modal -->
    <div id="customerModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalTitle">Add New Customer</h2>
                <button class="close-btn" onclick="closeModal()">&times;</button>
            </div>
            <form id="customerForm" onsubmit="saveCustomer(event)">
                <div class="form-group">
                    <label>Full Name *</label>
                    <input type="text" id="customerName" required>
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    <input type="email" id="customerEmail" required>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="tel" id="customerPhone">
                </div>
                <div class="form-group">
                    <label>Company *</label>
                    <input type="text" id="customerCompany" required>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select id="customerStatus">
                        <option value="lead">Lead</option>
                        <option value="prospect">Prospect</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Notes</label>
                    <textarea id="customerNotes" rows="3"></textarea>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="button" class="btn btn-danger" id="deleteBtn" onclick="deleteCustomer()" style="display: none;">Delete</button>
                    <button type="submit" class="btn">Save Customer</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Customer Data Management
        let customers = [
            { id: 1, name: "Sarah Johnson", email: "sarah.j@techcorp.com", phone: "+1 (555) 123-4567", company: "TechCorp Industries", status: "active", notes: "Key decision maker, interested in enterprise plan" },
            { id: 2, name: "Michael Chen", email: "m.chen@innovate.io", phone: "+1 (555) 234-5678", company: "Innovate Solutions", status: "lead", notes: "Requested demo, follows up next week" },
            { id: 3, name: "Emily Rodriguez", email: "emily.r@globaltech.com", phone: "+1 (555) 345-6789", company: "GlobalTech Systems", status: "prospect", notes: "Exploring options, budget approved" },
            { id: 4, name: "David Kim", email: "david@startupventures.com", phone: "+1 (555) 456-7890", company: "Startup Ventures", status: "active", notes: "Recently upgraded to premium tier" },
            { id: 5, name: "Lisa Thompson", email: "lisa.t@enterprisehub.com", phone: "+1 (555) 567-8901", company: "Enterprise Hub", status: "prospect", notes: "Comparing with competitors" },
            { id: 6, name: "James Wilson", email: "j.wilson@cloudnine.com", phone: "+1 (555) 678-9012", company: "Cloud Nine Inc", status: "lead", notes: "Attended webinar, sent follow-up materials" },
            { id: 7, name: "Maria Garcia", email: "maria@digitalwave.com", phone: "+1 (555) 789-0123", company: "Digital Wave Co", status: "active", notes: "Long-term customer, high satisfaction" },
            { id: 8, name: "Robert Taylor", email: "r.taylor@nexusgroup.com", phone: "+1 (555) 890-1234", company: "Nexus Group", status: "inactive", notes: "Contract expired, needs renewal outreach" },
            { id: 9, name: "Jennifer Lee", email: "jen.lee@futuretechs.com", phone: "+1 (555) 901-2345", company: "Future Technologies", status: "prospect", notes: "Scheduled for product demo next Tuesday" },
            { id: 10, name: "Christopher Brown", email: "chris.b@megacorp.com", phone: "+1 (555) 012-3456", company: "MegaCorp International", status: "lead", notes: "Referred by existing customer, high potential" }
        ];

        let currentEditId = null;
        let chartInstance = null;

        // Initialize Dashboard
        function initDashboard() {
            updateStats();
            renderPipelineChart();
        }

        // Update Dashboard Statistics
        function updateStats() {
            document.getElementById('totalCustomers').textContent = customers.length;
            document.getElementById('activeDeals').textContent = customers.filter(c => c.status === 'active').length;
            document.getElementById('newLeads').textContent = customers.filter(c => c.status === 'lead').length;
        }

        // Render Pipeline Chart
        function renderPipelineChart() {
            const ctx = document.getElementById('pipelineChart').getContext('2d');
            
            const statusCounts = {
                lead: customers.filter(c => c.status === 'lead').length,
                prospect: customers.filter(c => c.status === 'prospect').length,
                active: customers.filter(c => c.status === 'active').length,
                inactive: customers.filter(c => c.status === 'inactive').length
            };

            if (chartInstance) {
                chartInstance.destroy();
            }

            chartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Leads', 'Prospects', 'Active Customers', 'Inactive'],
                    datasets: [{
                        label: 'Number of Customers',
                        data: [statusCounts.lead, statusCounts.prospect, statusCounts.active, statusCounts.inactive],
                        backgroundColor: [
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(0, 123, 255, 0.8)',
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgb(255, 193, 7)',
                            'rgb(0, 123, 255)',
                            'rgb(40, 167, 69)',
                            'rgb(220, 53, 69)'
                        ],
                        borderWidth: 2,
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        // Render Customer Table
        function renderCustomers(customerList = customers) {
            const tableBody = document.getElementById('customerTable');
            tableBody.innerHTML = '';

            customerList.forEach(customer => {
                const row = document.createElement('tr');
                row.onclick = () => openEditModal(customer.id);
                
                row.innerHTML = `
                    <td><strong>${customer.name}</strong></td>
                    <td>${customer.company}</td>
                    <td>${customer.email}</td>
                    <td>${customer.phone}</td>
                    <td><span class="status-badge status-${customer.status}">${customer.status.toUpperCase()}</span></td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        // Search Customers
        function searchCustomers() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filtered = customers.filter(c => 
                c.name.toLowerCase().includes(searchTerm) ||
                c.email.toLowerCase().includes(searchTerm) ||
                c.company.toLowerCase().includes(searchTerm) ||
                c.phone.includes(searchTerm)
            );
            renderCustomers(filtered);
        }

        // Tab Switching
        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Update tab content
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');

            if (tabName === 'dashboard') {
                initDashboard();
            }
        }

        // Modal Management
        function openAddModal() {
            currentEditId = null;
            document.getElementById('modalTitle').textContent = 'Add New Customer';
            document.getElementById('customerForm').reset();
            document.getElementById('deleteBtn').style.display = 'none';
            document.getElementById('customerModal').classList.add('active');
        }

        function openEditModal(customerId) {
            currentEditId = customerId;
            const customer = customers.find(c => c.id === customerId);
            
            document.getElementById('modalTitle').textContent = 'Edit Customer';
            document.getElementById('customerName').value = customer.name;
            document.getElementById('customerEmail').value = customer.email;
            document.getElementById('customerPhone').value = customer.phone;
            document.getElementById('customerCompany').value = customer.company;
            document.getElementById('customerStatus').value = customer.status;
            document.getElementById('customerNotes').value = customer.notes || '';
            document.getElementById('deleteBtn').style.display = 'inline-block';
            document.getElementById('customerModal').classList.add('active');
        }

        function closeModal() {
            document.getElementById('customerModal').classList.remove('active');
            currentEditId = null;
        }

        // Save Customer
        function saveCustomer(event) {
            event.preventDefault();

            const customerData = {
                name: document.getElementById('customerName').value,
                email: document.getElementById('customerEmail').value,
                phone: document.getElementById('customerPhone').value,
                company: document.getElementById('customerCompany').value,
                status: document.getElementById('customerStatus').value,
                notes: document.getElementById('customerNotes').value
            };

            if (currentEditId) {
                // Update existing customer
                const index = customers.findIndex(c => c.id === currentEditId);
                customers[index] = { ...customers[index], ...customerData };
            } else {
                // Add new customer
                const newId = Math.max(...customers.map(c => c.id), 0) + 1;
                customers.push({ id: newId, ...customerData });
            }

            renderCustomers();
            updateStats();
            renderPipelineChart();
            closeModal();
        }

        // Delete Customer
        function deleteCustomer() {
            if (confirm('Are you sure you want to delete this customer?')) {
                customers = customers.filter(c => c.id !== currentEditId);
                renderCustomers();
                updateStats();
                renderPipelineChart();
                closeModal();
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('customerModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Initialize App
        document.addEventListener('DOMContentLoaded', function() {
            initDashboard();
            renderCustomers();
        });
    </script>
</body>
</html>
